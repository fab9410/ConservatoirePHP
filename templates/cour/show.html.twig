{% extends 'base.html.twig' %}

{% block title %}Cour{% endblock %}

{% block body %}
    <h1>Cour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cour.name }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ cour.dateDebut ? cour.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ cour.dateFin ? cour.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ cour.niveau }}</td>
            </tr>
            <tr>
                <th>Prof</th>
                <td>{{ cour.prof.email }} {{ cour.prof.nom }}</td>
            </tr>
            <tr>
                <th>Eleves</th>
                <td>
                    {% for eleve in cour.eleve %}
                        {{ eleve.nom }} {{ eleve.prenom }} <br>
                     {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_cour_index') }}">back to list</a>

    <a href="{{ path('app_cour_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cour/_delete_form.html.twig') }}
{% endblock %}
